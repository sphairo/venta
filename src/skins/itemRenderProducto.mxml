<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="155" height="220" rollOver="over()" rollOut="out()" creationComplete="init(event)">
	
	<fx:Script>
		<![CDATA[
			import com.anotherflexdev.ui.AlertInfo;
			
			import mx.binding.utils.BindingUtils;
			import mx.events.FlexEvent;
			
			protected function over():void
			{
				ranking.source="img/agregar_carrito.png";
			}
			
			protected function out():void
			{
				ranking.source="img/rankingCeroStarss.png";
			}
			
			protected function ranking_clickHandler(event:MouseEvent):void
			{
				AlertInfo.show("Producto agregado.");
			}
			
			protected function init(event:FlexEvent):void
			{  	
			}
			
			protected function cargaCompleta():void
			{
				loader.visible= false;
			}
		]]>
	</fx:Script>
	
	
	<s:Image id="img_background" width="100%" height="100%" scaleMode="stretch" smooth="true"
			 source="@Embed('img/background_producto.png')"/>
	<!--<s:Image y="10" width="124" height="124" enableLoadingState="true" horizontalCenter="0"
			 source="{data.img}"/>-->
	
	
	<s:BitmapImage id="img" y="10" width="124" height="124" horizontalCenter="0"
				   scaleMode="letterbox" smooth="true" smoothingQuality="high" source="{data.img}" complete="cargaCompleta()" />
	<!--<s:BusyIndicator id="loader" left="7" top="13"/>-->
	<s:BusyIndicator id="loader" width="64" height="64" horizontalCenter="0" verticalCenter="-40" />
	<s:Label x="15" y="172" width="130" color="#929292" fontSize="12" text="{data.nom_producto}"
			 textAlign="left"/>
	<s:Label x="15" y="159" color="#A4A4A4" fontSize="12" fontWeight="bold" text="${data.precio} MXN"/>
	<s:Label text="{data.id_producto}" fontWeight="bold" fontSize="21" visible="false"/>
	<s:Image x="15" y="136" smooth="true" source="img/rankingCeroStarss.png" id="ranking" buttonMode="true" click="ranking_clickHandler(event)"/>
</s:ItemRenderer>
