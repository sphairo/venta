<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:components="components.*"
				xmlns:renders="renders.*"
				width="155" height="220" autoDrawBackground="true" rollOut="out()" rollOver="over()">
	
	<fx:Script>
		<![CDATA[
			import clases.GlobalStatic;
			
			import com.anotherflexdev.ui.AlertInfo;
			
			internal function over():void
			{
				ranking.source="img/agregar_carrito.png";
			}
			
			internal function out():void
			{
				ranking.source="img/rankingCeroStarss.png";
				imgCamara.visible = false;
			}
			
			internal function ranking_clickHandler(event:MouseEvent):void
			{
				AlertInfo.show("Producto agregado.");
			}
						
			internal function cargaCompleta():void
			{
				loader.visible= false;
			}
			
			internal function img_rollOverHandler(event:MouseEvent):void
			{
				imgCamara.visible = true;
			}
			
			internal function img_rollOutHandler(event:MouseEvent):void
			{
				imgCamara.visible = false;
			}
			
			import mx.events.FlexMouseEvent;
			internal function onMouseDownOutside(event:FlexMouseEvent):void {
				event.target.close();
			}
			
			internal function defaultCallout_mouseDownHandler(event:MouseEvent):void
			{
				defaultCallout.close();
			}
			
			internal function onShowDefaultCalloutClick():void {
				defaultCallout.open(imgCamara);
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<s:Callout id="defaultCallout" width="190" height="66" horizontalCenter="0"
				   mouseDown="defaultCallout_mouseDownHandler(event)"
				   mouseDownOutside="onMouseDownOutside(event)" rollOut="defaultCallout.close()"
				   verticalCenter="0">
			<renders:renderCambiarFoto/>
		</s:Callout>
		<components:SparkCallout/>
	</fx:Declarations>	
	<!--<s:Image id="img_background" width="100%" height="100%" scaleMode="stretch" smooth="true"
			 source="@Embed('img/background_producto.png')"/>-->
	
	<s:BorderContainer id="background" left="10" right="10" top="10" bottom="15"
					   borderVisible="false" dropShadowVisible="true">
		<s:backgroundFill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#ffffff"/>
			</s:LinearGradient>
		</s:backgroundFill> 		
	</s:BorderContainer>

	<s:Image id="img" y="10" width="124" height="124" complete="cargaCompleta()" horizontalCenter="0"
			 rollOut="img_rollOutHandler(event)" rollOver="img_rollOverHandler(event)"
			 scaleMode="letterbox" smooth="true" smoothingQuality="high"
			 source="{GlobalStatic.url_image +data.path}"/>
	<s:BusyIndicator id="loader" width="64" height="64" horizontalCenter="0" verticalCenter="-40"/>
	<s:Label x="15" y="172" width="130" color="#929292" fontSize="12" text="{data.nom_producto}"
			 textAlign="left"/>
	<s:Label x="15" y="159" color="#A4A4A4" fontSize="12" fontWeight="bold" text="${data.precio} MXN"/>
	<s:Label visible="false" fontSize="21" fontWeight="bold" text="{data.id_producto}"/>
	<s:Image id="ranking" x="15" y="136" buttonMode="true" click="ranking_clickHandler(event)"
			 smooth="true" source="img/rankingCeroStarss.png"/>
	<s:Image id="imgCamara" visible="false" y="45" buttonMode="true"
			 click="onShowDefaultCalloutClick()" horizontalCenter="0"
			 rollOver="img_rollOverHandler(event)" smooth="true" source="img/camara.png"/>
</s:ItemRenderer>
