<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:mx="library://ns.adobe.com/flex/mx"
					buttonMode="true" clipAndEnableScrolling="true">
	
	<fx:Script>
		<![CDATA[
			import mx.events.CalendarLayoutChangeEvent;
			import mx.formatters.DateFormatter;
			
			internal function convertFechaToDate(item:Object):String 
			{ 
				var formatear:DateFormatter = new DateFormatter();
				formatear.formatString = "DD-MM-YYYY";
				return formatear.format(item);
			}
			
			internal function selectedDate(event:CalendarLayoutChangeEvent):void
			{
				data.fecha_entrada = event.newDate;
			}
			
			override public function set data(value:Object):void
			{
				try
				{
					if(value == null) return;
					super.data = value;
					
					dateFieldFechaNacimiento.selectedDate = data.fecha_entrada;
					
					if(data.error == true)
					{
						relleno.color = 0xee7970;
						relleno.alpha = .8;
					}
					else
						relleno.alpha = .0;
				}
				catch(error:Error)
				{
					trace(error);
				}   
			}
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%" id="background">
		<s:fill>
			<s:SolidColor id="relleno"/>
		</s:fill>
	</s:Rect>
	<mx:DateField id="dateFieldFechaNacimiento" width="90%" change="selectedDate(event)" buttonMode="true"
				  editable="false" formatString="DD-MM-YYYY" horizontalCenter="0"
				  labelFunction="convertFechaToDate" selectedDate="@{data.fecha_entrada}"
				  toolTip="Fecha: Dia-Mes-AÃ±o" verticalCenter="0" yearNavigationEnabled="true" contentBackgroundAlpha="0.0"/>
	
</s:GridItemRenderer>
