<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		width="350" height="35" xmlns:components="com.rain.pg.download.view.components.*" horizontalCenter="0" verticalCenter="0">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.aaronhardy.ProgressBar")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.aaronhardy.ProgressBar;
			
		]]>
	</fx:Script>
	
	<s:Rect id="track" width="100%" height="100%" radiusX="15" radiusY="15">
		<s:fill>
			<s:SolidColor color="#ffffff" alpha="0.6"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect id="bar" radiusX="10" radiusY="10" left="10" top="8"
			width="{330 * (ProgressBar(hostComponent).value / ProgressBar(hostComponent).maximum)}"
			height="20">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#f29c2e"/>
				<s:GradientEntry color="#f9a73c"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="lblStatus" color="#636262" fontStyle="italic" horizontalCenter="0"
			 text="{uint(bar.width/330*100)+'%'}" verticalCenter="2"/>
</s:Skin>