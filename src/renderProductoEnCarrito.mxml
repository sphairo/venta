<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				width="100%" height="80">
	
	<fx:Script>
		<![CDATA[
			
			internal function over():void{
				imgEliminar.alpha = 1;
			}
			
			internal function out():void{
				imgEliminar.alpha = .5;
			}
		]]>
	</fx:Script>
	
	<s:Image id="img" left="10" width="64" height="64" scaleMode="letterbox" smooth="true"
			 smoothingQuality="high" source="{img.source = 'http://127.0.0.1/Ventas/amfphp/services/files/' + data.path}"
			 verticalCenter="0"/>
	<s:Label id="lblNombreProducto" left="75" right="35" bottom="5" color="#575757" fontSize="16"
			 text="{data.nom_producto}" verticalCenter="0"/>
	<s:Image id="imgEliminar" right="5" width="32" height="32" alpha="0.4" smooth="true" buttonMode="true"
			 smoothingQuality="high" source="img/botonCerrar.png" verticalCenter="0" rollOver="over()" rollOut="out()"/>
	
</s:ItemRenderer>
