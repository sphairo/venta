<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100" height="50" buttonMode="true" 
		 mouseChildren="false" mouseDown="down()" mouseUp="up()" mouseOver="over()" mouseOut="out()">
	
	<fx:Declarations>
		<s:Scale id="scaleUp" target="{img}" scaleXBy="0.1" scaleYBy="0.1"/>
		<s:Scale id="scaleDown" target="{img}" scaleXBy="-0.1" scaleYBy="-0.1"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			[Bindable][Embed(source="img/btnNuevo.png", mimeType="image/png")] public var imgDefault:Class;
			[Bindable][Embed(source="img/btnNuevoOver.png", mimeType="image/png")] public var imgOver:Class;
			[Bindable][Embed(source="img/btnNuevoDown.png", mimeType="image/png")] public var imgDown:Class;
			
			internal function over():void{
				scaleUp.transformX=-0.1;
				scaleUp.play();
				img.source = imgOver;
			}
			
			internal function out():void{
				scaleDown.play();
				img.source = imgDefault;
			}
			
			internal function down():void{
				img.source = imgDown;								
			}
			
			internal function up():void{
				img.source = imgOver;
			}
			
		]]>
	</fx:Script>
	
	<s:Image id="img" left="0" width="40" height="40" smooth="true" 
			 smoothingQuality="high" source="{imgDefault}" verticalCenter="0"/>
	<s:Label id="lblAgregar" left="45" color="#FFFFFF" fontSize="16" fontStyle="italic"
			 text="Nuevo" verticalCenter="0"/>
</s:Group>
