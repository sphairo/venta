<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="95" height="50" buttonMode="true" contentBackgroundAlpha="0.0" rollOver="rollOverHandler()" rollOut="rollOutHandler()" mouseChildren="false">
	
	<fx:Declarations>		
		<s:Parallel id="parallel" duration="200" target="{img}">
			<s:Fade alphaFrom="0.5" alphaTo="1"/>
		</s:Parallel>
		<s:Parallel id="parallel2" duration="100" target="{img}">
			<s:Fade alphaFrom="1" alphaTo="0.5"/>
		</s:Parallel>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.EffectEvent;
			internal function rollOverHandler():void{
				parallel.play();
			}
			
			internal function rollOutHandler():void{
				parallel2.play();
			}
			
		]]>
	</fx:Script>
	
	<s:Image id="img" left="0" width="40" height="40" scaleMode="letterbox" smooth="true"
			 smoothingQuality="high" source="img/btnAyuda2.png" verticalCenter="0" alpha="0.5"/>
	<s:Label id="lblIAyuda" left="42" color="#FFFFFF" fontSize="16" fontStyle="italic"
			 text="Ayuda" verticalCenter="0"/>
	<s:Rect id="rect" x="0" y="-100" width="100%" height="6" visible="false">
		<s:fill>
			<s:SolidColor color="#eb6123"/>
		</s:fill>
	</s:Rect>
</s:Group>
