<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="170" height="48" buttonMode="true" mouseChildren="false" mouseDown="down()"
		 mouseOut="out()" mouseOver="over()" mouseUp="up()">
	
	<fx:Declarations>
		<s:Scale id="scaleUp" duration="50" scaleXBy="0.1" scaleXTo="1" scaleYBy="0.1" scaleYTo="1"
				 target="{img}"/>
		<s:Scale id="scaleUp2" duration="50" scaleXBy="0.1" scaleYBy="0.1" target="{img}"/>
		<s:Scale id="scaleDown" duration="50" scaleXBy="-0.01" scaleXTo="1" scaleYBy="-0.01"
				 scaleYTo="1" target="{img}"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			[Bindable][Embed(source="img/btnMasVendidos.png", mimeType="image/png")] public var imgDefault:Class;
			[Bindable][Embed(source="img/btnMasVendidosOver.png", mimeType="image/png")] public var imgOver:Class;
			[Bindable][Embed(source="img/btnMasVendidosDown.png", mimeType="image/png")] public var imgDown:Class;
			
			internal function over():void{
				scaleUp.transformX=-0.1;
				scaleUp2.play();
				img.source = imgOver;
			}
			
			internal function out():void{
				scaleDown.play();
				img.source = imgDefault;
			}
			
			internal function down():void{
				scaleUp.play();
				img.source = imgDown;		
			}
			
			internal function up():void{
				img.source = imgOver;
			}
			
		]]>
	</fx:Script>
	<s:Image id="img" left="0" width="40" height="40" scaleMode="letterbox" smooth="true"
			 smoothingQuality="high" source="img/btnMasVendidos.png" verticalCenter="1"/>
	<s:Label id="lblCambiarFoto" right="10" color="#FFFFFF" fontSize="16" fontStyle="italic"
			 text="MÃ¡s vendidos" verticalCenter="0"/>
	
</s:Group>
